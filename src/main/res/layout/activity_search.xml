<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <TextView
        android:id="@+id/searchTextView"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/descriptive_text_search_activity" />

    <EditText
        android:id="@+id/searchBarTextEdit"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchTextView"
        android:ems="10"
        android:hint="@string/hint_search_text"
        android:inputType="textPersonName" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/searchResults"
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchBarTextEdit"
        android:layout_marginTop="48dp" />

    <ImageButton
        android:id="@+id/searchBtn"
        android:layout_width="83dp"
        android:layout_height="48dp"
        android:layout_below="@+id/searchTextView"
        android:layout_toEndOf="@+id/searchBarTextEdit"
        app:srcCompat="@android:drawable/ic_search_category_default" />

</RelativeLayout>